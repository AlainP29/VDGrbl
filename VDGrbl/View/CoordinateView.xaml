<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:VDGrbl.View"
             xmlns:ViewModel="clr-namespace:VDGrbl.ViewModel" x:Class="VDGrbl.View.CoordinateView"
             mc:Ignorable="d" Height="140" Width="250">
    <Grid DataContext="{Binding Source={StaticResource Locator}}">
        <GroupBox Header="Machin coordinates" Style="{DynamicResource GroupBoxStyleVD}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <TextBox Name="TextBoxMachinStatus" Grid.Column="1" Margin="5" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Background="{Binding Main.MachinStatusColor}" Text="{Binding Main.MachinStatus, StringFormat={}{0}}"/>
                <Label Grid.Row="1" Content="X" Margin="5" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"/>
                <Label Grid.Column="1" Grid.Row="1" Content="Y" Margin="5" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"/>
                <Label Grid.Column="2" Grid.Row="1" Content="Z" Margin="5" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Height="29" VerticalAlignment="Top"/>
                <Label Grid.Column="0" Grid.Row="2" Content="{Binding Main.PosX, Mode=OneWay}" Margin="5" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"/>
                <Label Grid.Column="1" Grid.Row="2" Content="{Binding Main.PosY, Mode=OneWay}" Margin="5" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"/>
                <Label Grid.Column="2" Grid.Row="2" Content="{Binding Main.PosZ, Mode=OneWay}" Margin="5" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"/>
            </Grid>
        </GroupBox>
    </Grid>
</UserControl>
