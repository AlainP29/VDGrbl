<UserControl x:Class="VDGrbl.View.DataConsoleView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:VDGrbl.Tools"
             mc:Ignorable="d" d:DesignWidth="600" Height="165">
    <UserControl.Resources>
        <local:InverseBooleanConverter x:Key="ConvertBool"/>
    </UserControl.Resources>
    <!--Show data sent + response from the Arduino-->
    <Grid DataContext="{Binding Source={StaticResource Locator}}">
        <GroupBox Header="{Binding Main.GroupBoxGrblConsoleTitle}" Style="{DynamicResource GroupBoxStyleVD}" IsEnabled="{Binding Main.IsSelectedKeyboard, Converter={StaticResource ConvertBool}}" Margin="0,0,0,10">
            <Grid Margin="5">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="5*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <DataGrid Grid.Row="0" Grid.Column="0" AutoGenerateColumns="False" IsSynchronizedWithCurrentItem="True" 
                          IsReadOnly="True" Width="Auto" Height="120" SelectedIndex="1"
                          ItemsSource="{Binding Main.ConsoleData, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Margin="0" VerticalAlignment="Top" RenderTransformOrigin="0.5,0.5" ScrollViewer.CanContentScroll="True" HorizontalScrollBarVisibility="Hidden">
                    <DataGrid.VerticalGridLinesBrush>
                        <SolidColorBrush Color="{DynamicResource {x:Static SystemColors.GradientActiveCaptionColorKey}}"/>
                    </DataGrid.VerticalGridLinesBrush>
                    <DataGrid.HorizontalGridLinesBrush>
                        <SolidColorBrush Color="{DynamicResource {x:Static SystemColors.GradientInactiveCaptionColorKey}}"/>
                    </DataGrid.HorizontalGridLinesBrush>
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Line sent" Binding="{Binding GrblTXData, Mode=OneWay}" Width="300" MinWidth="70" MaxWidth="380"/>
                        <DataGridTextColumn Header="Response" Binding="{Binding GrblRXData, Mode=OneWay}" Width="300" MinWidth="60" MaxWidth="380" CanUserResize="True" CanUserSort="True"/>
                    </DataGrid.Columns>
                </DataGrid>
                <!--Clear datagrid + verbose (all data received, machine position...)-->
                <StackPanel Grid.Row="0" Grid.Column="1">
                    <Button Content="Clear" Margin="0 25 0 5" Width="50" 
                            Command="{Binding Main.ClearCommand, Mode=OneWay}" 
                        Style="{DynamicResource ControlStyleVD}"/>
                    <CheckBox Content="Verbose" Margin="10,30,5,0" 
                              VerticalContentAlignment="Center" 
                              IsChecked="{Binding Main.IsVerbose, Mode=TwoWay}"/>
                </StackPanel>
            </Grid>
        </GroupBox>
    </Grid>
</UserControl>
