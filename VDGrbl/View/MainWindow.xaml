<Window x:Class="VDGrbl.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:ignore="http://www.galasoft.ch/ignore"
        xmlns:local="clr-namespace:VDGrbl.View"
        mc:Ignorable="d ignore"
        Height="550"
        Width="900"
        Title="VDGrbl" WindowStartupLocation="Manual" ResizeMode="NoResize"
        Icon="/VDGrbl;component/Skins/Images/Favicon-VD.png">
    <!--Main window of the application: composed of several user control -->
    <Grid x:Name="LayoutRoot" Background="#FFE5E5E5" DataContext="{Binding Source={StaticResource Locator}}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <!--Connection and display area-->
        <StackPanel>
            <local:SerialPortSettingsView Margin="1" Width="Auto" Height="Auto"/>
            <local:CoordinateView Margin="1" Width="Auto" Height="Auto"/>
            <local:GrblInfoView Margin="1"/>
        </StackPanel>
        <!--Send/receive data area + grbl commands-->
        <StackPanel Grid.Column="1">
            <local:SendDataView Margin="1,1,0.6,1" 
                        VerticalAlignment="Center"
                        Width="Auto" Height="111"/>
            <local:ReceiveDataView Margin="1" Height="200"/>
            <local:CommandsView Margin="1" Height="Auto" Width="Auto"/>
        </StackPanel>
        <!--Jogging area + setting informations-->
        <DockPanel Grid.Column="2">
            <TabControl >
                <TabItem Header="Jogging">
                    <Grid Background="#FFE5E5E5">
                        <StackPanel>
                        <local:JoggingView Margin="1" VerticalAlignment="Top"/>
                        </StackPanel>
                    </Grid>
                </TabItem>
                <TabItem Header="Grbl settings">
                    <Grid Background="#FFE5E5E5">
                        <local:LoadSettingsView Margin="1" Height="500" Width="Auto"/>
                    </Grid>
                </TabItem>
            </TabControl>
        </DockPanel>
    </Grid>
</Window>
